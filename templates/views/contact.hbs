<div class="container">
	<h1>Complaint Portal</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if enquirySubmitted}}
			<h3>Thanks for getting in touch.</h3>
			{{else}}
			<form method="post">
				<input type="hidden" name="action" value="contact">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Name</label>
					<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" class="form-control" value="{{formData.email}}">
				</div>
				<div class="form-group">
					<label>Phone</label>
					<input type="text" name="phone" placeholder="(optional)" class="form-control" value="{{formData.phone}}">
				</div>
				<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
					<label>Enquiry Type</label>
					<select name="enquiryType" class="form-control">
						{{#each enquiryTypes}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
					<label>Priority</label>
					<select name="priority" class="form-control">
						{{#each priorities}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>	
				<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
					<label>Police Station</label>
					<select name="policeStation" class="form-control">
						{{#each policeStations}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>									
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Problem Description</label>
					<textarea name="message" placeholder="Problem Description here..." rows="4" class="form-control">{{formData.message}}</textarea>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>
			{{/if}}
		</div>
	</div>
</div>
